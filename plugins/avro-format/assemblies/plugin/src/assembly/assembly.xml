<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>zip</id>
  <formats>
    <format>zip</format>
  </formats>

  <baseDirectory>pdi-avro-format-plugin</baseDirectory>

  <fileSets>
    <fileSet>
      <directory>${resources.directory}</directory>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
    </fileSet>

    <!-- the staging dir -->
    <fileSet>
      <directory>${assembly.dir}</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>org.pentaho.di.plugins:pdi-avro-format-core:jar</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
	
	<dependencySet>
      <scope>runtime</scope>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.pentaho.di.plugins:pdi-avro-format-core:jar</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <scope>runtime</scope>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>org.pentaho.di.plugins:pdi-avro-format-core:*</exclude>
      </excludes>
      <includes>
        <include>org.apache.avro:avro</include>
        <include>org.codehaus.jackson:jackson-mapper-asl</include>
        <include>org.codehaus.jackson:jackson-core-asl</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>